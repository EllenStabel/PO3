ScreenManagement:
    # transition: SlideTransition(direction='left')
    TitleScreen:
    MainScreen:
    ECGScreen:
    PPGScreen:
    EDAScreen:


<TitleScreen>
    name: 'title'

    canvas.before:
        Color:
            rgb: (0, 88/255, 143/255)

        Rectangle:
            pos: self.pos
            size: self.size

    Button:
        text: 'Stressmonitor'
        size_hint: 0.5, 0.5
        pos_hint: {"center_y": 0.5, "center_x":0.5}
        on_press: root.manager.current = 'main'



<MainScreen>
    name: 'main'
    canvas.before:
        Color:
            rgb: (0, 88/255, 143/255)

        Rectangle:
            pos: self.pos
            size: self.size


    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            orientation: 'horizontal'
            Label:
                text: 'ECG'
            Button:
                text: 'waarde ECG'
                on_press: root.manager.current = 'ECG'

        BoxLayout:
            orientation: 'horizontal'
            Label:
                text: 'PPG'
            Button:
                text: 'waarde PPG'
                on_press: root.manager.current = 'PPG'
        BoxLayout:
            orientation: 'horizontal'
            Label:
                text: 'EDA'
            Button:
                text: 'waarde EDA'
                on_press: root.manager.current = 'EDA'


<ECGScreen>
    name: 'ECG'
    canvas.before:
        Color:
            rgb: (0, 88/255, 143/255)

        Rectangle:
            pos: self.pos
            size: self.size
    Label:
        text: 'ECG'
        size: "100dp","100dp"
        font_size: "50dp"
        pos_hint: {"center_y": 0.9}
        color: 1, 1, 1, 1
    Button:
        text: "Overzicht"
        size_hint: 0.1, 0.1
        pos_hint: {"left":1, "top":1}
        on_press:
            # root.transition = SlideTransition(direction='right')
            root.manager.current = 'main'
    AnchorLayoutECG:


<AnchorLayoutECG@AnchorLayout>:
    anchor_x: "center"
    anchor_y: "center"
    BoxLayout:
        size_hint: 1, .5
        Label:
            text: 'Waarde ECG'
            size_hint: 0.2, 1
        Label:
            text: 'Grafiek'
            size_hint: 0.8, 1



