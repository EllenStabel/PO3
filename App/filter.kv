ScreenManagement:
    TitleScreen:
    MainScreen:
    ECGScreen:
    PPGScreen:
    EDAScreen:


<TitleScreen>
    name: 'title'
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'fotoapp.jpeg'

    Button:
        text: 'Stressmonitor'
        background_color: 1, 1, 1, 0.5
        size_hint: 0.5, 0.5
        pos_hint: {"center_y": 0.5, "center_x":0.5}
        on_press:
            root.manager.current = 'main'
            root.manager.transition.direction = 'left'


<MainScreen>
    name: 'main'
    canvas.before:
        Color:
            rgb: (0, 88/255, 143/255)

        Rectangle:
            pos: self.pos
            size: self.size


    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            orientation: 'horizontal'
            Label:
                size_hint: (0.05,1)
            Image:
                source: 'Heart-symbol.png'
                size_hint: (0.1, 1)
                pos_hint: {"center_x": 0.5, "center_y": 0.5}
                size: 10,10

            Label:
                text: 'ECG'
                font_size: "50dp"
                size_hint: (0.35, 1)
            Button:
                text: 'waarde ECG'
                background_color: 1, 1, 1, 0
                on_press:
                    root.manager.current = 'ECG'
                    root.manager.transition.direction = 'left'

        BoxLayout:
            orientation: 'horizontal'
            Label:
                size_hint: (0.05,1)
            Image:
                source: 'zuurstof.png'
                size_hint: (0.1, 1)
                pos_hint: {"center_x": 0.5, "center_y": 0.5}
                size: 10,10
            Label:
                text: 'PPG'
                font_size: "50dp"
                size_hint: (0.35, 1)

            Button:
                text: 'waarde PPG'
                background_color: 1, 1, 1, 0
                on_press:
                    root.manager.current = 'PPG'
                    root.manager.transition.direction = 'left'
        BoxLayout:
            orientation: 'horizontal'
            Label:
                size_hint: (0.05,1)
            Image:
                source: 'zweetdruppels.png'
                size_hint: (0.1, 1)
                pos_hint: {"center_x": 0.5, "center_y": 0.5}
                size: 10,10

            Label:
                text: 'EDA'
                font_size: "50dp"
                size_hint: (0.35, 1)
            Button:
                text: 'waarde EDA'
                background_color: 1, 1, 1, 0
                on_press:
                    root.manager.current = 'EDA'
                    root.manager.transition.direction = 'left'


<ECGScreen>
    name: 'ECG'
    canvas.before:
        Color:
            rgb: (0, 88/255, 143/255)

        Rectangle:
            pos: self.pos
            size: self.size
    Label:
        text: 'ECG'
        size: "100dp","100dp"
        font_size: "50dp"
        pos_hint: {"center_y": 0.9}
        color: 1, 1, 1, 1
    BoxLayout:
        size_hint: 0.1, 0.1
        pos_hint: {"left":1, "top":1}
        Image:
            source: 'terugknop.png'
            size_hint: (0.2, 1)
            pos_hint: {"center_x": 0.5, "center_y": 0.5}

        Button:
            text: "Overzicht"
            background_color: 1, 1, 1, 0
            size_hint: (0.8, 1)
            pos_hint: {"left":1, "top":1}
            on_press:
                root.manager.current = 'main'
                root.manager.transition.direction = 'right'
    AnchorLayoutECG:


<AnchorLayoutECG@AnchorLayout>:
    anchor_x: "center"
    anchor_y: "center"
    BoxLayout:
        size_hint: 1, .5
        Label:
            text: 'Waarde ECG'
            size_hint: 0.2, 1
        Label:
            text: 'Grafiek'
            size_hint: 0.8, 1



