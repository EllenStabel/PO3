TitleScreen:


<TitleScreen>


    Button:
        text: 'Thuiszorgmonitor'

        size_hint: 0.5, 0.5

        # size_hint: None, None
        # width: "100dp"
        # height: "60dp"

        # x, center_x, right
        # y, center_y, top

        pos_hint: {"center_y": 0.5, "center_x":0.5}
        on_press: root.manager.current = 'main'


<MainScreen>
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            orientation: 'horizontal'
            Label:
                text: 'ECG'
            Button:
                text: 'waarde ECG'
                on_press: root.manager.current = 'ECG'
        BoxLayout:
            orientation: 'horizontal'
            Label:
                text: 'PPG'
            Button:
                text: 'waarde PPG'
                on_press: root.manager.current = 'PPG'
        BoxLayout:
            orientation: 'horizontal'
            Label:
                text: 'EDA'
            Button:
                text: 'waarde EDA'
                on_press: root.manager.current = 'EDA'


<ECGScreen>
    Label:
        text: 'ECG'
        size: "100dp","100dp"
        font_size: "50dp"
        pos_hint: {"center_y": 0.9}
        color: 1, 1, 1, 1
    Button:
        text: "Overzicht"
        size_hint: 0.1, 0.1
        pos_hint: {"left":1, "top":1}
        on_press: root.manager.current = 'main'

